# Media Storage Configuration
DOWNLOADS_PATH=./downloads
IMAGES_PATH=./downloads/images
VIDEOS_PATH=./downloads/videos
TEMP_PATH=./downloads/temp
PROCESSED_PATH=./downloads/processed
